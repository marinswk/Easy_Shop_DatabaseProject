<body class="<%= controller.controller_name %>">

<div class="navbar navbar-inverse navbar-fixed-top" >
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/home/index">Easyshop Online</a>
    </div>
      <ul class="nav navbar-nav">
        <li class="active"><a href="/store/index">Store <span class="sr-only">(current)</span></a></li>
        <li><a href="/mappa/index">Dove siamo</a></li>
        <li><a href="/home/about">About</a></li>
      </ul>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%if utenti_signed_in? %></li>
              <li style="color: white">Logged in as <strong><%= current_utenti.email %></strong></li>
              <li><%= link_to 'Edit profile', edit_utenti_registration_path %></li>
              <li><%= link_to "Logout", destroy_utenti_session_path, method: :delete %></li>
              <li><% else %></li>
              <li><%= link_to "Sign up", new_utenti_registration_path %></li>
              <li><%= link_to "Login Utente", new_utenti_session_path %></li>
              <li><%= link_to "Login Admin", login_path %></li>
              <li><% end %></li>
      </ul>
    </div>

  </div>
</div>
<!--/.NAVBAR END-->

<div id="banner">
  <%= image_tag("logo.png") %>
  <%= @page_title || "Easy-Shop!" %>
</div>
<!--BANNER LOGO-->

<section id="home" class="head-main-img">

  <div class="container">
    <div class="row text-center pad-row" >
      <div class="col-md-12">
        <h1 style="font-size: 50px">EASYSHOP</h1>
      </div>
    </div>
  </div>

</section>
<!--/.HEADING END-->
<div id="columns">
  <div id="side">
    <div id="cart">
      <% if @cart %>
          <%= hidden_div_if(@cart.line_items.empty?,id: 'cart') do %>
              <%= render @cart %>
          <% end %>
      <% end %>

    </div>

    <% if session[:user_id] %>
        <ul>
          <li><%= link_to 'Orders', orders_path %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Users', users_path %></li>
        </ul>
        <%= button_to 'Logout', logout_path, method: :delete %>
    <% end %>

  </div>

  <div id="main">
    <%= yield %>
  </div>
</div>
<!--tabella-->

<!--finetabella-->
<section>

  <%= yield :others %>

</section>
<!--/.NOTE END-->
<section id="clients"  >
  <%= yield :others2 %>
</section>

