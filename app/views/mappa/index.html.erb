<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false" style="" ></script>

<script>


    function initialize() {
        var latlng = new google.maps.LatLng(37.5013, 15.0742);

        var mapOptions = {
            zoom: 8,
            center: latlng
        };

        var map = new google.maps.Map(document.getElementById('map'), mapOptions);

        var contentString ='<div id="content">'+'</div>'+
                '<h1 id="firstHeading" class="firstHeading">EasyShop</h1>'+
                '<div id="bodyContent">'+'<p><b>Siamo qui!Attivi in tutta la zona di Catania<br></p>'
                +'<p><img src="http://www.easy-shop.cz/files/contact/easyshop-logo-new.png?1373974025" alt="EasyShop"align="right" width="100" height="100"></p>'+'</div>'

        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position: latlng,
            map: map,
            draggable: false,
            title: 'EasyShop'
        });

        google.maps.event.addListener(marker, 'click', function() {
            infowindow.open(map,marker);
        });
    }

    google.maps.event.addDomListener(window, 'load', initialize);


</script>



